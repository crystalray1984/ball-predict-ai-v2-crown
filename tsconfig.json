{
    "extends": "@tsconfig/node22/tsconfig.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "types": ["./src/types.d.ts", "node"],
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"]
        }
    }
}
